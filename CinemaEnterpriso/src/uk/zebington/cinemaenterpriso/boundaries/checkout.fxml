<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox spacing="10.0">
         <children>
            <Label text="Pay With:" />
            <RadioButton fx:id="cashRadio" mnemonicParsing="false" text="Cash" />
            <RadioButton fx:id="cardRadio" mnemonicParsing="false" text="Card" />
         </children>
      </HBox>
      <Pane fx:id="checkoutPane" />
   </children>
</VBox>
